<section class="articles">
  {{#each articles}}
    <article class="post">
      <header>
        <h2>{{ meta.title}}</h2>
        <span class="sub-head">
            {{#format_date}}{{ meta.date }}{{/format_date}}
        </span>
      </header>
    
      <section class="content">
        {{{ body }}}
      </section>
    
      <section class="comments">
      </section>
    </article>
  {{/each}}
</section>


